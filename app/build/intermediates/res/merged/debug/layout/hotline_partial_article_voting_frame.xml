<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hotline_voting_view"
    android:orientation="vertical"
    android:visibility="gone"
    android:layout_alignParentBottom="true"
    tools:context=".activity.SolutionArticleActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/hotline_voting_view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hotline_voting_view_divider_height"
        android:background="@color/hotline_voting_view_divider" />

    <TextView
        android:id="@+id/hotline_voting_prompt"
        style="?attr/hotlineArticleVotingPromptTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/hotline_upvote"
            style="?attr/hotlineArticleUpvoteStyle" />

        <Button
            android:id="@+id/hotline_downvote"
            style="?attr/hotlineArticleDownvoteStyle" />
    </LinearLayout>
</LinearLayout>
