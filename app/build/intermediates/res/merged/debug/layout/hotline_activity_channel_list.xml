<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.freshdesk.hotline.activity.ChannelListActivity">

    <ListView
        android:id="@+id/hotline_activity_channel_list_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <include
        android:id="@+id/hotline_activity_channel_list_empty_view"
        layout="@layout/hotline_partial_channel_list_empty_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/hotline_activity_channel_list_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="gone"/>
</RelativeLayout>
