<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="4dp" />
            <gradient
                android:angle="270"
                android:centerColor="@color/hotline_visualizer_bg_start"
                android:centerY="0.75"
                android:endColor="@color/hotline_visualizer_bg_start"
                android:startColor="@color/hotline_visualizer_bg_start" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="4dp" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/hotline_visualizer_progress_center"
                    android:endColor="@color/hotline_visualizer_progress_end"
                    android:startColor="@color/hotline_visualizer_progress_start" />
            </shape>
        </clip>
    </item>


    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="4dp" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/hotline_visualizer_sec_progress_center"
                    android:centerY="0.75"
                    android:endColor="@color/hotline_visualizer_sec_progress_end"
                    android:startColor="@color/hotline_visualizer_sec_progress_start" />
            </shape>
        </clip>
    </item>
</layer-list>